#!/bin/bash

githubVersion=$(wget https://raw.githubusercontent.com/ArnyminerZ/CNCPi/master/Web/VERSION -q -O -)
localVersion=$(cat /var/www/html/VERSION)

if [[ "$localVersion" != "$githubVersion" ]]; then
    sudo git clone https://github.com/ArnyminerZ/CNCPi.git /temp/install

    sudo rm -rf /var/www/html
    sudo cp -r /temp/install/Web /var/www/html

    sudo rm -rf /temp/install
    sudo rm -rf /temp
else
    echo "You have already downloaded the last version"
fi